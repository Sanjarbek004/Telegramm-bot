from importlib.metadata import files

import telebot
from telebot import types
import os

Token = "7511852262:AAGl9YpO0NWi4m7SDLeSYW5qCJtiZO4dYt0"
bot = telebot.TeleBot(Token)

user_data = {}
user_states = {}

@bot.message_handler(commands=['start'])
def send_welcome(message):
    markup = types.ReplyKeyboardMarkup(resize_keyboard=True)
    but1 = types.KeyboardButton("🤵‍♂️Ro'yhatdan o'tish🙍‍♀️")
    markup.add(but1)
    bot.send_message(message.chat.id, "Salom! \nMen Goethe imtihoniga tayyorlovchi botman.", reply_markup=markup)

@bot.message_handler(func=lambda message: message.text == "🤵‍♂️Ro'yhatdan o'tish🙍‍♀️")
def register_user(message):
    bot.send_message(message.chat.id, "Ismingizni kiriting:")
    bot.register_next_step_handler(message, get_first_name)

def get_first_name(message):
    user_data['first_name'] = message.text
    bot.send_message(message.chat.id, "Familiyangizni kiriting:")
    bot.register_next_step_handler(message, get_last_name)

def get_last_name(message):
    user_data['last_name'] = message.text
    bot.send_message(message.chat.id, "Telefon raqamingizni kiriting (masalan, +998931234567):")
    bot.register_next_step_handler(message, get_phone_number)

def get_phone_number(message):
    user_data['phone_number'] = message.text
    bot.send_message(
        message.chat.id,
        f"Ro'yhatdan o'tkazildingiz!\n"
        f"Ism: {user_data['first_name']}\n"
        f"Familiya: {user_data['last_name']}\n"
        f"Telefon: {user_data['phone_number']}",
        reply_markup=types.ReplyKeyboardRemove()
    )
    show_main_menu(message)

def show_main_menu(message):
    markup = types.ReplyKeyboardMarkup(resize_keyboard=True)
    markup.add("Gapirish🗣", "Eshitish🎧")
    markup.add("O'qish📖", "Yozish✍️")
    bot.send_message(message.chat.id, "Hurmatli foydalanuvchi! \nO'zingizga kerakli bo'limni tanlang:", reply_markup=markup)

@bot.message_handler(func=lambda message: message.text in ["Gapirish🗣", "Eshitish🎧", "O'qish📖", "Yozish✍️"])
def main_menu(message):
    user_id = message.chat.id
    user_states[user_id] = message.text

    markup = types.ReplyKeyboardMarkup(resize_keyboard=True)
    btn1 = types.KeyboardButton("📹 Video darslik")
    btn2 = types.KeyboardButton("Qo'llanma📔")
    btn_back = types.KeyboardButton("🔙Orqaga")
    markup.add(btn1, btn2)
    markup.add(btn_back)

    section = message.text.replace("📖", "").replace("🗣", "").replace("🎧", "").replace("✍️", "").strip()
    bot.send_message(user_id, f"{section} bo‘limiga xush kelibsiz!", reply_markup=markup)

@bot.message_handler(func=lambda message: message.text == "🔙Orqaga")
def go_back(message):
    show_main_menu(message)

@bot.message_handler(func=lambda message: message.text == "📹 Video darslik")
def send_video_lesson(message):
    user_id = message.chat.id
    section = user_states.get(user_id)

    if section == "Gapirish🗣":
        try:
            file_path = "C:\\Users\\rajab\\Downloads\\1_dars.mp4"
            if not os.path.exists(file_path):
                bot.send_message(user_id, "❌ Video fayl topilmadi.")
                return

            with open(file_path, "rb") as video:
                bot.send_video(user_id, video, caption="Bu 1-dars videosi")

            markup = types.ReplyKeyboardMarkup(resize_keyboard=True)
            markup.add("Tugatdim✅")
            bot.send_message(user_id, "Video darslikni ko'rib bo'lgach Tugatdim✅ tugmasini bosing", reply_markup=markup)

        except Exception as e:
            bot.send_message(user_id, f"Video yuborishda xatolik yuz berdi: {e}")
    if section == "Eshitish🎧":
        try:
            files_path ="D:\\Eshitish\\dars_horen.mp4"
            if not os.path.exists(files_path):
                bot.send_message(user_id, "❌ Video fayl topilmadi.")
                return
            with open(files_path, "rb") as video:
                  bot.send_video(user_id, video, caption="Bu 1-dars videosi")
            markup = types.ReplyKeyboardMarkup(resize_keyboard=True)
            markup.add("Tugatdim✅")
            bot.send_message(user_id, "Video darslikni ko'rib bo'lgach Tugatdim✅ tugmasini bosing", reply_markup=markup)
        except Exception as e:
            bot.send_message(user_id, f"Video yuborishda xatolik yuz berdi: {e}")
    if section== "O'qish📖":
        try:
            file1_path="D:\\O'qish\\dars_o'qish.mp4"
            if not os.path.exists(file1_path):
                bot.send_message(user_id,"❌ Video fayl topilmadi." )
                return
            with open(file1_path, "rb") as video:
                  bot.send_video(user_id, video, caption="Bu 1-dars videosi")
            markup = types.ReplyKeyboardMarkup(resize_keyboard=True)
            markup.add("Tugatdim✅")
            bot.send_message(user_id, "Video darslikni ko'rib bo'lgach Tugatdim✅ tugmasini bosing", reply_markup=markup)

        except Exception as e:
            bot.send_message(user_id, f"Video yuborishda xatolik yuz berdi: {e}")
    if section=="Yozish✍️":
        try:
            file2_path="D:\\Yozish\\dars_yozish.mp4"
            if not os.path.exists(file2_path):
                bot.send_message(user_id, "❌ Video fayl topilmadi." )
                return
            with open(file2_path, 'rb') as video:
                bot.send_video(user_id, video, caption="Bu 1-dars videosi" )
            markup = types.ReplyKeyboardMarkup(resize_keyboard=True)
            markup.add("Tugatdim✅")
            bot.send_message(user_id, "Video darslikni ko'rib bo'lgach Tugatdim✅ tugmasini bosing", reply_markup=markup)
        except Exception as e:
            bot.send_message(user_id, f"Video yuborishda xatolik yuz berdi: {e}")

@bot.message_handler(func=lambda message: message.text == "Tugatdim✅")
def start_test(message):
    user_id = message.chat.id
    section = user_states.get(user_id)

    if section == "Gapirish🗣":
        bot.send_message(user_id, "📝 Sprechen (Gapirish) bo‘limi uchun test boshlandi! ✅")
        ask_question1(message)
    elif section == "Eshitish🎧":
        bot.send_message(user_id, "📝 Eshitish (Horen) bo‘limi uchun test boshlandi! ✅")
        ask_esitish_question1(message)
    elif section == "O'qish📖":
        bot.send_message(user_id,"O'qish📖 (SCHREIBEN) bo'limi uchun test boshlandi! ✅" )
        ask_oqish_question1(message)
    elif section == "Yozish✍️":
        bot.send_message(user_id, "Yozish✍️ (LESEN) bo'limi uchun test boshlandi! ✅")
        ask_yozish_question1(message)
def ask_oqish_question1(message):
    markup = types.ReplyKeyboardMarkup(resize_keyboard=True, one_time_keyboard=True)
    markup.add("A) Ich wohne in Berlin.", "B) Ich bin Lehrer.", "C) Ich liebe Kaffee.", "D) Ich gehe ins Kino.")
    bot.send_message(message.chat.id, "1.  Wo wohnst du? (Qayerda yashaysan?)\n", reply_markup=markup)
    bot.register_next_step_handler(message, check_oqish_question1)
def check_oqish_question1(message):
    if message.text and message.text.startswith("A"):
        bot.send_message(message.chat.id, "✅ To‘g‘ri!")
    else:
        bot.send_message(message.chat.id, "❌ Noto‘g‘ri. To‘g‘ri javob: A) Ich wohne in Berlin.")
    ask_oqish_question2(message)
def ask_question1(message):
    markup = types.ReplyKeyboardMarkup(resize_keyboard=True, one_time_keyboard=True)
    markup.add("A) Ich heiße Anna.", "B) Ich bin Hunger.", "C) Ich gehen Schule.", "D) Ich ist Student.")
    bot.send_message(message.chat.id, "1. Qaysi gap grammatik jihatdan to‘g‘ri?\n", reply_markup=markup)
    bot.register_next_step_handler(message, check_question1)

def check_question1(message):
